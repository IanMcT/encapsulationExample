<Window x:Class="encapsulationExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:encapsulationExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label>Amount</Label>
        <TextBox x:Name="txtDollarAmount"></TextBox>
        <Label>Password</Label>
        <PasswordBox x:Name="txtPassword"></PasswordBox>
        <RadioButton x:Name="rbDeposit">Deposit</RadioButton>
        <RadioButton x:Name="rbWithdraw">Withdraw</RadioButton>
        <Button x:Name="btnProcess" Click="btnProcess_Click">Process</Button>
        <Label x:Name="lblOutput"></Label>
    </StackPanel>
</Window>
